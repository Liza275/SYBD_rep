@model OrdersMeni

@{
    ViewData["Title"] = "Create orders_meni";
}
<div class="text-center">
    <h2 class="display-4">Create orders_meni</h2>
</div>

﻿<form class="container-fluid" style="max-width: 580px;" asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="row">
            <label class="col-lg-4 justify-content-between">
                Menu
            </label>
            <div class="col-lg-8">
                <select name="menuid" class="form-control" asp-items="@(new SelectList(@ViewBag.Menus,"Id", "Name"))"></select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-lg-4 justify-content-between">
                Order
            </label>
            <div class="col-lg-8">
                <select name="ordersid" class="form-control" asp-items="@(new SelectList(@ViewBag.Orders,"Id", "Id"))"></select>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-12">
            <button type="submit" style="min-width: 100px" class="btn btn-sm btn-light">
                Create
            </button>
        </div>
    </div>
</form>